@model Application.DbModels.Address

@{
    ViewBag.Title = "Delete";
}

<div id="myaddresses-delete" class="b-white">
    <!--Title-->
    <div class="title b-lightgrey">
        <h2>My Addresses</h2>
    </div>

    <!--Description-->
    <div class="subtitle b-red f-white big">
        <h2>@Model.StreetName @Model.StreetNumber</h2>
    </div>

    <!-- Form -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h2 class="text f-red">Are you sure you want to delete this?</h2>
        <div>
            <div class="label">Id</div>
            <div class="text">#@Model.Id</div>
        </div>
        <div>
            <div class="label">Street Name</div>
            <div class="text">@Model.StreetName</div>
        </div>
        <div>
            <div class="label">Street Number</div>
            <div class="text">@Model.StreetNumber</div>
        </div>
        <div>
            <div class="label">City</div>
            <div class="text">@Model.City.Name</div>
        </div>
        <div>
            <div class="label">Country</div>
            <div class="text">@Model.City.Country.Name</div>
        </div>
        <input type="submit" value="Delete" class="submit f-white" />
        <div class="link f-red">@Html.ActionLink("Back to My Profile", "Details", "MyUsers", new { id = ViewBag.userId }, null)</div>
    }
</div>





