@model Application.DbModels.Product

@{
    ViewBag.Title = "Delete";
}

<div id="myproducts-delete" class="b-white">
    <!--Title-->
    <div class="title b-lightgrey">
        <h2>My Items</h2>
    </div>

    <!--Description-->
    <div class="subtitle b-blue f-white big">
        <h2>@Model.Name</h2>
    </div>

    <!-- Form -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h2 class="text f-blue">Are you sure you want to delete this?</h2>
        <div>
            <div class="label">Id</div>
            <div class="text">#@Model.Id</div>
        </div>
        <div>
            <div class="label">Name</div>
            <div class="text">@Model.Name</div>
        </div>
        <div>
            <div class="label">Description</div>
            <div class="text">@Model.Description</div>
        </div>
        <input type="submit" value="Delete" class="submit f-white" />
        <div class="link f-blue">@Html.ActionLink("Back to Item", "Details", new { id = Model.Id })</div>
    }
</div>




